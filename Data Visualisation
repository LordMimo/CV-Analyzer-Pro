<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CV Analysis Visualization</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f7fa;
      text-align: center;
      padding: 40px;
    }
    h2 {
      color: #333;
    }
    .chart-container {
      width: 70%;
      margin: auto;
    }
  </style>
</head>
<body>
  <h2>CV Analysis Results Visualization</h2>

  <div class="chart-container">
    <canvas id="cvChart"></canvas>
  </div>

  <script>
    // بيانات مأخوذة من تحليل السيرة الذاتية (مثال)
    const keywordCoverage = 85;   // نسبة الكلمات المفتاحية
    const skillBalance = 72;      // توازن المهارات
    const cvCompleteness = 90;    // اكتمال السيرة الذاتية

    const ctx = document.getElementById('cvChart').getContext('2d');

    new Chart(ctx, {
      type: 'bar', // نوع الرسم البياني
      data: {
        labels: ['Keyword Coverage', 'Skill Balance', 'CV Completeness'],
        datasets: [{
          label: 'CV Analysis (%)',
          data: [keywordCoverage, skillBalance, cvCompleteness],
          backgroundColor: ['#36A2EB', '#FFCE56', '#4CAF50'],
          borderColor: '#333',
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true,
            max: 100,
            title: {
              display: true,
              text: 'Percentage (%)'
            }
          }
        },
        plugins: {
          legend: { display: true },
          title: {
            display: true,
            text: 'CV Strength Analysis'
          }
        }
      }
    });
  </script>
</body>
</html>
