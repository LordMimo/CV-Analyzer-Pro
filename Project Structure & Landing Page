                class="w-full py-3 px-6 bg-primary-blue hover:bg-blue-600 text-white font-bold text-lg rounded-lg shadow-lg transition duration-300 transform hover:scale-[1.02] active:scale-100 focus:outline-none focus:ring-4 focus:ring-primary-blue focus:ring-opacity-50">
            Start Your Free Analysis
        </button>
        <p class="text-sm text-gray-500 mt-4">No registration required. Analysis is anonymous.</p>
        
        <!-- Placeholder Message for "Navigation" -->
        <div id="upload-message" class="hidden mt-8 p-4 bg-yellow-900 border border-yellow-700 text-yellow-300 rounded-lg">
            <!-- This message simulates navigating to the upload page -->
            <p><strong>Redirecting...</strong> This is where the file upload interface would load. (For this demonstration, click the button again to reset the message.)</p>
        </div>

    </div>

    <script>
        // JavaScript for button interaction
        document.getElementById('goToUploadBtn').addEventListener('click', function() {
            const container = document.getElementById('landing-page-container');
            const message = document.getElementById('upload-message');
            
            // Apply a visual click effect
            this.classList.add('animate-pulse-once');
            setTimeout(() => {
                this.classList.remove('animate-pulse-once');
            }, 500);

            // Show the placeholder message
            if (message.classList.contains('hidden')) {
                message.classList.remove('hidden');
                // Hide the main content (simulating page change)
                document.querySelector('header').classList.add('hidden');
                document.querySelector('section').classList.add('hidden');
                this.textContent = 'Reset Demo';
                this.classList.remove('bg-primary-blue');
                this.classList.add('bg-gray-600');
            } else {
                // Reset the demo state
                message.classList.add('hidden');
                document.querySelector('header').classList.remove('hidden');
                document.querySelector('section').classList.remove('hidden');
                this.textContent = 'Start Your Free Analysis';
                this.classList.remove('bg-gray-600');
                this.classList.add('bg-primary-blue');
            }
        });
    </script>
</body>
